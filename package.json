{
  "name": "whatsapp-bulk-sender",
  "version": "0.0.3",
  "description": "Send bulk messages via Whatsapp",
  "main": "main.js",
  "build": {
    "appId": "com.thoughtincentive.whatsapp-bulk-sender",
    "productName": "WhatsApp Bulk Sender",
    "mac": {
      "category": "public.app-category.social-networking"
    },
    "dmg": {
      "icon": false
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Network"
    }
  },
  "scripts": {
    "start": "electron .",
    "postinstall": "electron-builder install-app-deps",
    "build": "electron-builder --windows",
    "release": "electron-builder --windows --publish always"
  },
  "repository": "https://github.com/nandubatchu/whatsapp-bulk-sender",
  "keywords": [
    "whatsapp",
    "venombot",
    "venom",
    "messaging"
  ],
  "author": "nandubatchu@gmail.com",
  "devDependencies": {
    "electron": "^11.0.3",
    "electron-builder": "^22.9.1",
    "electron-reload": "^1.5.0"
  },
  "dependencies": {
    "electron-updater": "^4.3.5",
    "google-spreadsheet": "^3.0.14",
    "libphonenumber-js": "^1.9.6",
    "venom-bot": "^2.1.0"
  }
}
